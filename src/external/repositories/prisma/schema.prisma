generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Deck {
  id        String   @id @default(uuid())
  title     String
  createdAt DateTime @default(now()) @map("created_at")
  cards     Card[]

  @@map("decks")
}

model Card {
  id                 String      @id @default(uuid())
  term               String
  definition         String
  lastView           DateTime?   @map("last_view")
  deck               Deck        @relation(fields: [deckId], references: [id])
  deckId             String      @map("deck_id")
  lastDifficultyName String?     @map("last_difficulty")
  lastDifficulty     Difficulty? @relation(fields: [lastDifficultyName], references: [name])

  @@map("cards")
}

model Difficulty {
  name   String @id
  weight Int
  cards  Card[]

  @@map("difficulties")
}
